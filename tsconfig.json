{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "target": "ES5",
    "types": ["@types/styled-components-react-native", "jest"],
    "paths": {
      "screens/*": ["./screens/*"],
      "setup/*": ["./setup/*"],
      "theme/*": ["./theme/*"],
      "components/*": ["./components/*"]
    }
  },
  "include": [
    "./**/*",
    "./screens/**/*",
    "./setup/**/*",
    "./theme/**/*",
    "./components/**/*",
    "./@types/*"
  ]
}
